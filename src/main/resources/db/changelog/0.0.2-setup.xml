<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="0.0.2-setup" author="rl">
        <addColumn tableName="grave">
            <column name="DATEBIRTH" type="date"/>
            <column name="DATEDEATH" type="date"/>
            <column name="GRAVE_LOC" type="varchar(255)"/>
            <column name="LATITUDE" type="varchar(255)"/>
            <column name="LONGITUDE" type="varchar(255)"/>
            <column name="SEX" type="varchar(255)"/>
            <column name="TOMBSTONE_PATH" type="varchar(255)"/>
            <column name="VITA_PATH" type="varchar(255)"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="grave">
                <column name="DATEBIRTH" type="date"/>
                <column name="DATEDEATH" type="date"/>
                <column name="GRAVE_LOC" type="varchar(255)"/>
                <column name="LATITUDE" type="varchar(255)"/>
                <column name="LONGITUDE" type="varchar(255)"/>
                <column name="SEX" type="varchar(255)"/>
                <column name="TOMBSTONE_PATH" type="varchar(255)"/>
                <column name="VITA_PATH" type="varchar(255)"/>
            </dropColumn>
        </rollback>
    </changeSet>

    <changeSet id="0.0.2-setup-2" author="rl">
        <addColumn tableName="cemetery">
            <column name="CITY" type="varchar(255)"/>
            <column name="COUNTRY" type="varchar(255)"/>
            <column name="LATITUDE" type="varchar(255)"/>
            <column name="LONGITUDE" type="varchar(255)"/>
            <column name="STREET" type="varchar(255)"/>
            <column name="ZIPCODE" type="varchar(255)"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="cemetery">
                <column name="CITY"/>
                <column name="COUNTRY"/>
                <column name="LATITUDE"/>
                <column name="LONGITUDE"/>
                <column name="STREET"/>
                <column name="ZIPCODE"/>
            </dropColumn>
        </rollback>
    </changeSet>

    <changeSet id="initial_data" author="rl">
        <sqlFile path="sql/initial.sql" relativeToChangelogFile="true"/>
        <rollback/>
    </changeSet>

</databaseChangeLog>