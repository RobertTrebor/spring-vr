<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">



    <changeSet id="0.0.1-setup-grave" author="rl">
        <addColumn tableName="grave">
            <column name="CREATED" type="DATETIME"/>
            <column name="MODIFIED" type="DATETIME"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="grave" columnName="CREATED"/>
            <dropColumn tableName="grave" columnName="MODIFIED"/>
        </rollback>
    </changeSet>

    <changeSet id="0.0.1-setup-cemetery" author="rl">
        <addColumn tableName="cemetery">
            <column name="CREATED" type="DATETIME"/>
            <column name="MODIFIED" type="DATETIME"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="cemetery" columnName="CREATED"/>
            <dropColumn tableName="cemetery" columnName="MODIFIED"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
